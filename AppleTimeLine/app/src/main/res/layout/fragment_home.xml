<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="home"
            type="com.android.gabriel.appletimeline.ui.home.HomeFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:id="@+id/fragment_container"
        tools:context=".ui.home.HomeFragment">


        <Button
            android:id="@+id/iphone"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="iPhone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ipad"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ipad"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="iPad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mac"
            app:layout_constraintTop_toBottomOf="@+id/iphone" />

        <Button
            android:id="@+id/mac"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="Mac"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/watch"
            app:layout_constraintTop_toBottomOf="@+id/ipad" />

        <Button
            android:id="@+id/watch"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="Watch"
            android:layout_marginBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mac" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>